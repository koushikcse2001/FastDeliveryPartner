<main id="main" class="main">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                <li class="breadcrumb-item"><a href="/admin/blog">Blog</a></li>
                <li class="breadcrumb-item active">{{title}}</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section dashboard">

        <div class="card">
            <div class="card-body">
          
                <a class="btn btn-outline-warning btn-sm float-end my-2" href="/admin/blog/{{blog.id}}/edit">Edit</a>
         
                <a class="btn btn-outline-warning btn-sm float-end my-2" href="/admin/blog/create">Create</a>
                <!-- Dark Table -->
                <table class="table table-dark">
                    <tbody>
                        <tr>
                            <th>Image</th>
                            <td>:</td>
                            <td>
                                <img src="/{{blog.image}}" width="100px" height="80px" alt="">
                            </td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>:</td>
                            <td>
                                {{blog.title}}
                            </td>
                        </tr>
                        <tr>
                            <th>Details</th>
                            <td>:</td>
                            <td>
                                {{blog.details}}
                            </td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>:</td>
                            <td>
                                {{blog.name}}
                            </td>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <td>:</td>
                            <td>
                                {{blog.date}}
                            </td>
                        </tr>
                        <tr>
                            <th>Profile Image</th>
                            <td>:</td>
                            <td>
                                <img src="/{{blog.profileimage}}" width="100px" height="80px" alt="">
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!-- End Dark Table -->
            
            </div>
        </div>
    </section>

</main>
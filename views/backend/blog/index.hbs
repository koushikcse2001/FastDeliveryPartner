<main id="main" class="main">

  <div class="pagetitle">
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item">{{title}}</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Blogs Table</h5>
            <!-- Primary Color Bordered Table -->
            <table class="table table-bordered border-primary">

              <thead>
                <tr>
                  <th scope="col" style="text-align:center;">Image</th>
                  <th scope="col" style="text-align:center;">Title</th>
                  <th scope="col" style="text-align:center;">Details</th>
                  <th scope="col" style="text-align:center;">Name</th>
                  <th scope="col" style="text-align:center;">Date</th>
                  <th scope="col" style="text-align:center;">Profile Image</th>
                  <th scope="col" style="text-align:center;">Modify</th>
                </tr>
              </thead>

              <tbody>
                {{#each blog}}
                <tr>
                  <td>
                    <img src="/{{image}}" width="60px" alt="{{title}}">
                  </td>
                  <td>{{title}}</td>
                  <td>{{details}}</td>
                  <td>{{name}}</td>
                  <td>{{date}}</td>
                  <td>
                    <img src="/{{profileimage}}" width="60px" alt="{{date}}">
                  </td>
                  <td style="text-align:center;">
                    <a href="/admin/blog/{{id}}/show" class="btn btn-outline-success btn-sm"><i
                        class="bi bi-eye-fill"></i></a>
                    <a href="/admin/blog/{{id}}/edit" class="btn btn-outline-warning btn-sm"><i
                        class="bi bi-pencil-square"></i></a>
                    <a href="/admin/blog/{{id}}/delete" class="btn btn-outline-danger btn-sm"><i
                        class="bi bi-trash3-fill"></i></a>
                    {{!-- <form action="/admin/blog/{{id}}/delete" method="post">
                      <button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash3-fill"></i></button>
                    </form> --}}
                  </td>
                </tr>
                {{/each}}
              </tbody>


            </table>

            <!-- End Primary Color Bordered Table -->
            <a href="/admin" class="btn btn-outline-success btn-sm">HOME</a>
            <a href="/admin/blog/create" class="btn btn-outline-success btn-sm">ADD BLOG</a>
          </div>
        </div>
      </div>
  </section>

</main>
<!-- End #main -->
<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Data Entry</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                    <li class="breadcrumb-item"><a href="/admin/blog">Blog</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <section class="section">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Enter Your Blog Details</h5>
                        <!-- Floating Labels Form -->
                        <form class="row g-3 my-3" method="post" action="/admin/blog/store" enctype="multipart/form-data">
                            <div class="col-md-11">
                                <div class="form-floating">
                                    <input type="file" class="form-control" name="image">
                                    <label>Image</label>
                                </div>
                            </div>
                            <div class="col-md-11">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="floatingName" placeholder="Title"
                                        name="title">
                                    <label for="floatingName">Title</label>
                                </div>
                            </div>
                            <div class="col-11">
                                <div class="form-floating">
                                    <textarea type="text" class="form-control" placeholder="Details"
                                        style="height: 100px;" name="details"></textarea>
                                    <label>Details</label>
                                </div>
                            </div>
                            <div class="col-md-11">
                                <div class="form-floating">
                                    <input type="text" class="form-control" placeholder="Name" name="name">
                                    <label>Name</label>
                                </div>
                            </div>
                            <div class="col-md-11">
                                <div class="form-floating">
                                    <input type="text" class="form-control" placeholder="Date" name="date">
                                    <label>Date</label>
                                </div>
                            </div>

                            <div class="col-md-11">
                                <div class="form-floating">
                                    <input type="file" class="form-control" name="profileimage">
                                    <label>Profile Image</label>
                                </div>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <button type="reset" class="btn btn-secondary">Reset</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                    </div>
                </div>
            </div>

        </section>

    </main><!-- End #main -->
</body>
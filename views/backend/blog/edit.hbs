<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Data Edit</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                    <li class="breadcrumb-item"><a href="/admin/blog">Blog</a></li>
                    <li class="breadcrumb-item active">{{title}}</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <section class="section">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Enter Your Blog Details</h5>
                        <!-- Floating Labels Form -->
                        <form class="row g-3 my-3" method="post" action="/admin/blog/{{blog.id}}/update" enctype="multipart/form-data">
                            <div class="col-md-11">
                                <label for="floatingCity">Image</label>
                                <div class="form-floating">
                                    <input type="file" class="form-control" name="image">
                                    <img src="/{{blog.image}}" width="200px" alt="{{blog.title}}">
                                </div>
                            </div>
                            <div class="col-md-11">
                                <div class="form-floating">
                                    <input value="{{blog.title}}" type="text" class="form-control" id="floatingName"
                                        placeholder="Title" name="title">
                                    <label for="floatingName">Title</label>
                                </div>
                            </div>
                            <div class="col-11">
                                <div class="form-floating">
                                    <textarea type="text" class="form-control" placeholder="Details"
                                        style="height: 100px;" name="details">{{blog.details}}</textarea>
                                    <label>Details</label>
                                </div>
                            </div>
                            <div class="col-md-11">
                                <div class="form-floating">
                                    <input value="{{blog.name}}" type="text" class="form-control" placeholder="Name"
                                        name="name">
                                    <label>Name</label>
                                </div>
                            </div>
                            <div class="col-md-11">
                                <div class="form-floating">
                                    <input value="{{blog.date}}" type="text" class="form-control" placeholder="Date"
                                        name="date">
                                    <label>Date</label>
                                </div>
                            </div>

                            <div class="col-md-11">
                                <label for="floatingCity">Profile Image</label>
                                <div class="form-floating">
                                    <input type="file" class="form-control" name="profileimage">
                                    <img src="/{{blog.profileimage}}" width="200px" alt="{{blog.title}}">
                                </div>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Update</button>
                                <button type="reset" class="btn btn-secondary">Clear</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                    </div>
                </div>
            </div>

        </section>

    </main><!-- End #main -->
</body>
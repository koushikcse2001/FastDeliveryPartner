<main id="main" class="main">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                <li class="breadcrumb-item"><a href="/admin/about">About</a></li>
                <li class="breadcrumb-item active">{{title}}</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section dashboard">

        <div class="card">
            <div class="card-body">

                <a class="btn btn-outline-warning btn-sm float-end my-2" href="/admin/about/{{about.id}}/edit">Edit</a>

                <a class="btn btn-outline-warning btn-sm float-end my-2" href="/admin/about/create">Create</a>
                <!-- Dark Table -->
                <table class="table table-dark">
                    <tbody>
                        <tr>
                            <th>Title</th>
                            <td>:</td>
                            <td>
                                {{about.title}}
                            </td>
                        </tr>
                        <tr>
                            <th>Details</th>
                            <td>:</td>
                            <td>
                                {{about.details}}
                            </td>
                        </tr>
                        <tr>
                            <th>Details2</th>
                            <td>:</td>
                            <td>
                                {{about.details2}}
                            </td>
                        </tr>
                        <tr>
                            <th>Details3</th>
                            <td>:</td>
                            <td>
                                {{about.details3}}
                            </td>
                        </tr>
                        <tr>
                            <th>Details4</th>
                            <td>:</td>
                            <td>
                                {{about.details4}}
                            </td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>:</td>
                            <td>
                                <img src="/{{about.image}}" width="100px" height="80px" alt="">
                            </td>
                        </tr>
                        <tr>
                            <th>Link</th>
                            <td>:</td>
                            <td>
                                {{about.link}}
                            </td>
                        </tr>
                        
                    </tbody>
                </table>
                <!-- End Dark Table -->

            </div>
        </div>
    </section>

</main>
<main id="main" class="main">

  <div class="pagetitle">
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item">{{title}}</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Services Table</h5>
            <!-- Primary Color Bordered Table -->
            <table class="table table-bordered border-primary">
              <thead>
                <tr>
                  <th scope="col" style="text-align:center;">Image</th>
                  <th scope="col" style="text-align:center;">Title</th>
                  <th scope="col" style="text-align:center;">Details</th>
                  <th scope="col" style="text-align:center;">Link</th>
                  <th scope="col" style="text-align:center;">Modify</th>
                </tr>
              </thead>
              <tbody>
                {{#each services}}
                <tr>
                  <td>
                    <img src="/{{image}}" width="60px" alt="{{title}}">
                  </td>
                  <td>{{title}}</td>
                  <td>{{details}}</td>
                  <td>{{link}}</td>
                  <td style="text-align:center;">
                    <a href="/admin/services/{{id}}/show" class="btn btn-outline-success btn-sm">
                      <i class="bi bi-eye-fill"></i></a>
                    <a href="/admin/services/{{id}}/edit" class="btn btn-outline-warning btn-sm"><i
                        class="bi bi-pencil-square"></i></a>
                    <a href="/admin/services/{{id}}/delete" class="btn btn-outline-danger btn-sm"><i
                        class="bi bi-trash3-fill"></i></a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
            <!-- End Primary Color Bordered Table -->
            <a href="/admin" class="btn btn-outline-success btn-sm">HOME</a>
            <a href="/admin/services/create" class="btn btn-outline-success btn-sm">ADD SERVICES</a>


          </div>
        </div>
      </div>
  </section>

</main>
<!-- End #main -->
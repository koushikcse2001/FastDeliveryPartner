<main id="main" class="main">

  <div class="pagetitle">
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item">Team</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Team Table</h5>
            <!-- Primary Color Bordered Table -->
            <table class="table table-bordered border-primary">
              <thead>
                <tr>
                  <th scope="col" style="text-align:center;">Name</th>
                  <th scope="col" style="text-align:center;">Designation</th>
                  <th scope="col" style="text-align:center;">Description</th>
                  <th scope="col" style="text-align:center;">Image</th>
                  <th scope="col" style="text-align:center;">GitHub</th>
                  <th scope="col" style="text-align:center;">Facebook</th>
                  <th scope="col" style="text-align:center;">Twitter</th>
                  <th scope="col" style="text-align:center;">Instragram</th>
                  <th scope="col" style="text-align:center;">Linkdin</th>
                  <th scope="col" style="text-align:center;">Modify</th>
                </tr>
              </thead>

              <tbody>

                {{#each team}}
                <tr>
                  <td>{{name}}</td>
                  <td>{{designation}}</td>
                  <td>{{description}}</td>
                  <td>
                    <img src="/{{image}}" width="60px" alt="{{name}}">
                  </td>
                  <td>{{github}}</td>
                  <td>{{facebook}}</td>
                  <td>{{twitter}}</td>
                  <td>{{instagram}}</td>
                  <td>{{linkdin}}</td>
                  <td style="text-align:center;">
                    <a href="/admin/team/{{id}}/show" class="btn btn-outline-success btn-sm">
                    <i class="bi bi-eye-fill"></i></a>
                    <a href="/admin/team/{{id}}/edit" class="btn btn-outline-warning btn-sm"><i
                        class="bi bi-pencil-square"></i></a>
                    <a href="/admin/team/{{id}}/delete" class="btn btn-outline-danger btn-sm"><i
                        class="bi bi-trash3-fill"></i></a>
                  </td>
                </tr>
                {{/each}}

              </tbody>
            </table>
            <!-- End Primary Color Bordered Table -->
            <a href="/admin" class="btn btn-outline-success btn-sm">HOME</a>
            <a href="/admin/team/create" class="btn btn-outline-success btn-sm">ADD TEAM</a>


          </div>
        </div>
      </div>
  </section>

</main>
<!-- End #main -->
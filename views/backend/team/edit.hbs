<body>
  <main id="main" class="main">
    <div class="pagetitle">
      <h1>Data Edit</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
          <li class="breadcrumb-item"><a href="/admin/team">Team</a></li>
          <li class="breadcrumb-item active">{{title}}</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Enter Your Team Details</h5>
            <!-- Floating Labels Form -->
            <form class="row g-3 my-3" method="post" action="/admin/team/{{team.id}}/update"
              enctype="multipart/form-data">
              <div class="col-md-12">
                <div class="form-floating">
                  <input value="{{team.name}}" type="text" class="form-control" id="floatingName" placeholder="Title"
                    name="name">
                  <label for="floatingName">Name</label>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-floating">
                  <input value="{{team.designation}}" type="text" class="form-control" id="floatingName"
                    placeholder="Title" name="designation">
                  <label for="floatingName">Designation</label>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-floating">
                  <input value="{{team.description}}" type="text" class="form-control" id="floatingName"
                    placeholder="Title" name="description">
                  <label for="floatingName">Description</label>
                </div>
              </div>
              <div class="col-md-12">
                <label>Image</label>
                <div class="form-floating">               
                  <input type="file" class="form-control" name="image">
                  <img src="/{{team.image}}" width="200px" alt="{{team.name}}">
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-floating">
                  <input value="{{team.github}}" type="text" class="form-control" id="floatingName" placeholder="Title" name="github">
                  <label for="floatingName">GitHub</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input value="{{team.facebook}}" type="text" class="form-control" placeholder="Facebook" name="facebook">
                  <label>Facebook</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input value="{{team.twitter}}" type="text" class="form-control" placeholder="Twitter" name="twitter">
                  <label>Twitter</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input value="{{team.instagram}}" type="text" class="form-control" placeholder="Instagram" name="instagram">
                  <label>Instagram</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input value="{{team.linkdin}}" type="text" class="form-control" placeholder="Linked" name="linkdin">
                  <label>Linkdin</label>
                </div>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Update</button>
                <button type="reset" class="btn btn-secondary">Clear</button>
              </div>
            </form><!-- End floating Labels Form -->

          </div>
        </div>
      </div>

    </section>

  </main><!-- End #main -->
</body>
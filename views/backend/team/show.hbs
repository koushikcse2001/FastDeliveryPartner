<main id="main" class="main">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                <li class="breadcrumb-item"><a href="/admin/team">Team</a></li>
                <li class="breadcrumb-item active">{{title}}</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section dashboard">

        <div class="card">
            <div class="card-body">
                <a class="btn btn-outline-warning btn-sm float-end my-2" href="/admin/team/{{team.id}}/edit">Edit</a>
                <a class="btn btn-outline-warning btn-sm float-end my-2" href="/admin/team/create">Create</a>
                <!-- Dark Table -->
                <table class="table table-dark">
                    <tbody>

                        <tr>
                            <th>Name</th>
                            <td>:</td>
                            <td>
                                {{team.name}}
                            </td>
                        </tr>
                        <tr>
                            <th>Designation</th>
                            <td>:</td>
                            <td>
                                {{team.designation}}
                            </td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>:</td>
                            <td>
                                {{team.description}}
                            </td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>:</td>
                            <td>
                                <img src="/{{team.image}}" width="100px" height="80px" alt="{{team.name}}">
                            </td>
                        </tr>
                        <tr>
                            <th>GitHub</th>
                            <td>:</td>
                            <td>
                                {{team.github}}
                            </td>
                        </tr>
                        <tr>
                            <th>FaceBook</th>
                            <td>:</td>
                            <td>
                                {{team.facebook}}
                            </td>
                        </tr>
                        <tr>
                            <th>Twitter</th>
                            <td>:</td>
                            <td>
                                {{team.twitter}}
                            </td>
                        </tr>
                        <tr>
                            <th>Instagram</th>
                            <td>:</td>
                            <td>
                                {{team.instagram}}
                            </td>
                        </tr>
                        <tr>
                            <th>Linkdin</th>
                            <td>:</td>
                            <td>
                                {{team.linkdin}}
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!-- End Dark Table -->

            </div>
        </div>
    </section>

</main>
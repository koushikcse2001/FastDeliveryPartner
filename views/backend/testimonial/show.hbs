<main id="main" class="main">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                <li class="breadcrumb-item"><a href="/admin/testimonial">testimonial</a></li>
                <li class="breadcrumb-item active">{{title}}</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section dashboard">

        <div class="card">
            <div class="card-body">
                <a class="btn btn-outline-warning btn-sm float-end my-2"
                    href="/admin/testimonial/{{testimonial.id}}/edit">Edit</a>
                <a class="btn btn-outline-warning btn-sm float-end my-2" href="/admin/testimonial/create">Create</a>
                <!-- Dark Table -->
                <table class="table table-dark">
                    <tbody>
                        <tr>
                            <th>Image</th>
                            <td>:</td>
                            <td>
                                <img src="/{{testimonial.image}}" width="100px" height="80px" alt="{{testimonial.name}}">
                            </td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>:</td>
                            <td>
                                {{testimonial.name}}
                            </td>
                        </tr>
                        <tr>
                            <th>Designation</th>
                            <td>:</td>
                            <td>
                                {{testimonial.designation}}
                            </td>
                        </tr>
                        <tr>
                            <th>Details</th>
                            <td>:</td>
                            <td>
                                {{testimonial.details}}
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!-- End Dark Table -->

            </div>
        </div>
    </section>

</main>
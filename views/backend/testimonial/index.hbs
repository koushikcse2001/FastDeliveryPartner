<main id="main" class="main">

  <div class="pagetitle">
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item">Testimonial</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Testimonial Table</h5>
            <!-- Primary Color Bordered Table -->
            <table class="table table-bordered border-primary">
              <thead>
                <tr>

                  <th scope="col" style="text-align:center;">Image</th>
                  <th scope="col" style="text-align:center;">Name</th>
                  <th scope="col" style="text-align:center;">Designation</th>
                  <th scope="col" style="text-align:center;">Details</th>
                  <th scope="col" style="text-align:center;">Modify</th>
                </tr>
              </thead>
              <tbody>

               {{#each testimonial}}

                <tr>
                  <td>
                    <img src="/{{image}}" width="60px" alt="{{name}}">
                  </td>
                  <td>{{name}}</td>
                  <td>{{designation}}</td>
                  <td>{{details}}</td>
                  <td style="text-align:center;">
                    <a href="/admin/testimonial/{{id}}/show" class="btn btn-outline-success btn-sm">
                      <i class="bi bi-eye-fill"></i></a>
                    <a href="/admin/testimonial/{{id}}/edit" class="btn btn-outline-warning btn-sm"><i
                        class="bi bi-pencil-square"></i></a>
                    <a href="/admin/testimonial/{{id}}/delete" class="btn btn-outline-danger btn-sm"><i
                        class="bi bi-trash3-fill"></i></a>
                  </td>
                </tr>

               {{/each}}

              </tbody>
            </table>
            <!-- End Primary Color Bordered Table -->
            <a href="/admin" class="btn btn-outline-success btn-sm">HOME</a>
            <a href="/admin/testimonial/create" class="btn btn-outline-success btn-sm">ADD TESTIMONIAL</a>


          </div>
        </div>
      </div>
  </section>

</main>
<!-- End #main -->
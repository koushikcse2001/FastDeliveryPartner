<!-- ======= Recent Blog Posts Section ======= -->
<section id="recent-posts" class="recent-posts sections-bg">
  <div class="container" data-aos="fade-up">

    <div class="section-header">
      <h2>Recent Blog Posts</h2>
      <p>Consequatur libero assumenda est voluptatem est quidem illum et officia imilique qui vel architecto accusamus
        fugit aut qui distinctio</p>
    </div>

    <div class="row gy-4">

      {{#each blog}}

      <div class="col-xl-4 col-md-6">
        <article>

          <div class="post-img">
            <img src="/{{image}}" alt="{{title}}" class="img-fluid">
          </div>

          <p class="post-category">{{title}}</p>

          <h2 class="title">
            <a href="blog-details.html">{{details}}</a>
          </h2>

          <div class="d-flex align-items-center">
            <img src="/{{profileimage}}" alt="{{date}}" class="img-fluid post-author-img flex-shrink-0">
            <div class="post-meta">
              <p class="post-author">{{name}}</p>
              <p class="post-date">
                <time datetime="2022-01-01">{{date}}</time>
              </p>
            </div>
          </div>

        </article>
      </div><!-- End post list item -->

      {{/each}}
      
    </div><!-- End recent posts list -->

  </div>
</section><!-- End Recent Blog Posts Section -->